<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>fr.guiguilechat.jcelechat.programs</groupId>
		<artifactId>spring</artifactId>
		<version>7.40.1</version>
	</parent>
	<groupId>fr.guiguilechat.jcelechat.programs.spring</groupId>
	<artifactId>eveproxy</artifactId>
	<name>Eve Proxy</name>
	<description>Spring proxy on Eve data</description>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.yaml</groupId>
				<artifactId>snakeyaml</artifactId>
				<version>2.2</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<!-- own dependencies -->
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>conflicts</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>industry</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>mer</artifactId>
			<exclusions>
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>npc</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>sde</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>trade</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.guiguilechat.jcelechat.libs.spring</groupId>
			<artifactId>universe</artifactId>
		</dependency>
		<!-- other dependencies -->
		<dependency>
			<groupId>com.fasterxml.jackson.dataformat</groupId>
			<artifactId>jackson-dataformat-xml</artifactId>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.dataformat</groupId>
			<artifactId>jackson-dataformat-yaml</artifactId>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.datatype</groupId>
			<artifactId>jackson-datatype-jsr310</artifactId>
		</dependency>
		<dependency>
			<groupId>jakarta.servlet</groupId>
			<artifactId>jakarta.servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jfree</groupId>
			<artifactId>jfreechart</artifactId>
		</dependency>
		<dependency>
			<groupId>org.knowm.xchart</groupId>
			<artifactId>xchart</artifactId>
		</dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springdoc</groupId>
			<artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
			<scope>runtime</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-redis</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-tomcat</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.webjars</groupId>
			<artifactId>webjars-locator-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.webjars.npm</groupId>
			<artifactId>bootstrap</artifactId>
		</dependency>
	</dependencies>
	<packaging>war</packaging>
	<build>
		<finalName>EveProxy</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<image>
						<!--
						<builder>gcr.io/paketo-buildpacks/builder:full-cf</builder>-->
						<name>${EVEPROXY_DOCKER_HUB_USER}/${project.artifactId}</name>
						<publish>true</publish>
						<!--						<buildpacks>-->
						<!--
						<buildpack>paketo-buildpacks/ca-certificates</buildpack>-->
						<!--							  ask to use adoptium buildpack for jvm before
						paketo. So will use openjdk instead of belllab-->
						<!--
						<buildpack>gcr.io/paketo-buildpacks/adoptium</buildpack>-->
						<!--							<buildpack>paketo-buildpacks/java</buildpack>-->
						<!--						</buildpacks>-->
						<!--						<env>-->
						<!--							<BP_LOG_LEVEL>DEBUG</BP_LOG_LEVEL>-->
						<!--						</env>-->
					</image>
					<docker>
						<publishRegistry>
							<password>${EVEPROXY_DOCKER_HUB_TOKEN}</password>
							<username>${EVEPROXY_DOCKER_HUB_USER}</username>
						</publishRegistry>
					</docker>
				</configuration>
				<executions>
					<execution>
						<id>install-latest</id>
						<configuration>
							<image>
								<publish>false</publish>
							</image>
						</configuration>
						<goals>
							<goal>build-image-no-fork</goal>
						</goals>
						<phase>install</phase>
					</execution>
					<execution>
						<id>build-version</id>
						<configuration>
							<image>
								<name>
									${EVEPROXY_DOCKER_HUB_USER}/${project.artifactId}:${project.version}</name>
							</image>
						</configuration>
						<goals>
							<goal>build-image-no-fork</goal>
						</goals>
						<phase>deploy</phase>
					</execution>
					<execution>
						<id>build-latest</id>
						<goals>
							<goal>build-image-no-fork</goal>
						</goals>
						<phase>deploy</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>